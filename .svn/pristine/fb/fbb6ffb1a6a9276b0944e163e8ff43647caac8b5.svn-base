<?php
/**
 * Class DB_Model
 * @package LITE
 */
namespace LITE;

abstract class DB_Model extends Model {
	const DB_READ = 1;
	const DB_WRITE = 2;

	/** @var array database config */
	private $db_config = array();

	/** @var DB_Query db query object **/
	private $query = null;

	/**
	 * get current called class object
	 * @throws Exception
	 * @return DB_Model
	 */
	final public static function meta(){
		$class_name = get_called_class();
		$obj = new $class_name;
		return $obj;
	}

	/**
	 * on before save event
	 * @return boolean
	 */
	public function onBeforeSave(){
		return true;
	}

	/**
	 * on before update
	 * @return boolean
	 */
	public function onBeforeUpdate(){
		return true;
	}

	/**
	 * on before insert
	 * @return boolean
	 */
	public function onBeforeInsert(){
		return true;
	}

	/**
	 * current model table name
	 * @return string
	 */
	abstract public function getTableName();

	/**
	 * current mode primary key
	 * @return string
	 */
	abstract public function getPrimaryKey();

	/**
	 * get db record instance
	 * @param int $recode_type
	 * @return DB_Record
	 */
	protected function getDbRecord($recode_type = self::DB_WRITE){
		$configs = $this->getDbConfig();
		$config = $this->parseConfig($recode_type, $configs);
		return DB_Record::instance($config);
	}

	/**
	 * get database config key
	 * this method can be override by sub child
	 * @return array
	 */
	protected function getDbConfig(){
		return $this->db_config ?: Config::get('db');
	}

	/**
	 * set db config to current model
	 * @param $db_config
	 */
	protected function setDbConfig($db_config){
		$this->db_config = $db_config;
	}

	/**
	 * get database table prefix
	 * @param int $type
	 * @return string
	 */
	public static function getDbTablePrefix($type = self::DB_READ){
		$class = get_called_class();
		$obj = $class::meta();
		$configs = $obj->getDbConfig();
		$config = $obj->parseConfig($type, $configs);
		return $config['prefix'] ?: '';
	}

	/**
	 * database config parser.
	 * separate read & write config mode in db config
	 * @param string $recode_type
	 * @param array $all_config
	 * @throws Exception
	 * @internal param array $all
	 * @return array
	 */
	private function parseConfig($recode_type = null, array $all_config) {
		$read_list = array();
		$write_list = array();
		$depKey = 'host';

		// 解析数据库读写配置
		if($all_config[$depKey]){
			$read_list = $write_list = array(
				$all_config
			);
		}else if($all_config['read']){
			if($all_config['read'][$depKey]){
				$read_list = array(
					$all_config['read']
				);
			}else{
				$read_list = $all_config['read'];
			}
		}

		// 写表额外判断，预防某些系统只需要读的功能
		if(empty($write_list)){
			if($all_config['write']){
				if($all_config['write'][$depKey]){
					$write_list = array(
						$all_config['write']
					);
				}else{
					$write_list = $all_config['write'];
				}
			}
		}

		switch($recode_type){
			case self::DB_WRITE:
				$k = array_rand($write_list, 1);
				$host_config = $write_list[$k];
				break;

			case self::DB_READ:
			default:
				$k = array_rand($read_list, 1);
				$host_config = $read_list[$k];
				break;
		}

		$host_config = array_merge($host_config, array(
			'driver' => 'mysql',
			'charset' => 'utf-8'
		), $all_config);

		$host_config['driver'] = strtolower($host_config['driver']);
		$host_config['charset'] = strtolower($host_config['charset']);

		// 矫正mysql charset
		if($host_config['driver'] == 'mysql'){
			$host_config['charset'] = str_replace('-', '', $host_config['charset']);
		}

		if(empty($host_config[$depKey])){
			throw new Exception('DB CONFIG ERROR FOR RECORD TYPE:' . $recode_type);
		}
		return $host_config;
	}

	/**
	 * set query sql
	 * @param string | DB_Query $query
	 * @param array $db_config
	 * @throws Exception
	 * @return DB_Model
	 */
	public static function setQuery($query=null, $db_config=array()){
		if(is_string($query)){
			$query = new DB_Query($query);
		}
		if($query){
			$obj = new __ModelHelper__();
			if($db_config){
				$obj->setDbConfig($db_config);
			}
			$obj->query = $query;
			return $obj;
		}
		throw new Exception('QUERY STRING REQUIRED');
	}

	/**
	 * start a transaction
	 * @param callable $handler
	 * @param callable $fail_handler
	 */
	public static function transaction($handler, $fail_handler=null){
		try {
			DB_Record::beginTransactionAll();
			$flag = call_user_func($handler);
			if($flag === false){
				throw new Exception('DB transaction fail');
			}
			DB_Record::commitAll();
		} catch(Exception $ex){
			DB_Record::rollbackAll();
			if($fail_handler){
				call_user_func($fail_handler, $ex);
			}
		}
		DB_Record::cancelTransactionStateAll();
	}

	/**
	 * execute current query
	 * @return \PDOStatement
	 */
	public function execute(){
		$type = DB_Query::isWriteOperation($this->query) ? self::DB_WRITE : self::DB_READ;
		$result = $this->getDbRecord($type)->query($this->query);
		return $result;
	}

	/**
	 * select function
	 * @param string $statement
	 * @param string $var1
	 * @param string $var2
	 * @return DB_Model | DB_Query
	 */
	public static function find($statement='', $var1=null, $var2=null){
		$obj = self::meta();
		$prefix = self::getDbTablePrefix();
		$query = new DB_Query();
		$query->setTablePrefix($prefix);

		$args = func_get_args();
		$statement = self::parseConditionStatement($args, $obj);
		$query->select()->from($obj->getTableName())->where($statement);
		$obj->query = $query;
		return $obj;
	}

	/**
	 * get by primary key search
	 * @param string $val
	 * @param bool $as_array
	 * @return DB_Model | array
	 */
	public static function findOneByPk($val, $as_array=false){
		$obj = self::meta();
		return self::find($obj->getPrimaryKey().'=?', $val)->one($as_array);
	}

	/**
	 * find records by primary keys
	 * if keys is empty, return empty array
	 * @param array $pks
	 * @param bool $as_array
	 * @return array
	 */
	public static function findByPks(array $pks, $as_array=false){
		if(empty($pks)){
			return array();
		}

		$obj = self::meta();
		$statement = '';
		foreach($pks as &$val){
			$val = $obj->getDbRecord(self::DB_READ)->quote($val);
		}
		$statement = $obj->getPrimaryKey() ." IN (".join(',',$pks).") ";
		return self::find($statement)->all($as_array);
	}

	/**
	 * @param $field
	 * @param array $values
	 * @param bool $as_array
	 * @return array|DB_Model
	 */
	public static function findByFieldValues($field, array $values, $as_array=false) {
		if(empty($values)){
			return array();
		}

		$obj = self::meta();
		foreach($values as &$val){
			$val = $obj->getDbRecord(self::DB_READ)->quote($val);
		}
		$statement ="$field IN (".join(",",$values).") ";
		return self::find($statement)->all($as_array);
	}

	/**
	 * delete record by primary key
	 * @param string $val
	 * @return bool
	 */
	public static function delByPk($val){
		$obj = self::meta();
		return $obj->delete($obj->getPrimaryKey()."='$val'");
	}

	/**
	 * @param array $pks
	 * @param int $limit
	 * @return bool
	 */
	public static function delByPkList(array $pks, $limit = 0) {
		$obj = self::meta();
		foreach ($pks as &$val) {
			$val = $obj->getDbRecord(self::DB_READ)->quote($val);
		}
		return $obj->deleteWhere($limit, $obj->getPrimaryKey() . " IN (" . join(",", $pks) . ")");
	}

	/**
	 * @param $field
	 * @param array $values
	 * @param int $limit
	 * @return bool
	 */
	public static function delByFiledValues($field, array $values, $limit = 0) {
		$obj = self::meta();
		foreach ($values as &$val) {
			$val = $obj->getDbRecord(self::DB_READ)->quote($val);
		}
		return $obj->deleteWhere($limit, "{$field} IN (" . join(",", $values) . ")");
	}

	/**
	 * update item state
	 * @param string $val
	 * @param bool
	 * @return bool
	 */
	public static function updateByPk($val, $data){
		$obj = self::meta();
		$obj->setValue($obj->getPrimaryKey(), $val);
		$obj->setValues($data);
		return $obj->save();
	}

	/**
	 * update with data by condition
	 * @param array $data
	 * @param int $limit
	 * @param string $statement
	 * @return bool;
	 */
	public static function updateWhere(array $data, $limit=1, $statement){
		$args = func_get_args();
		$args = array_slice($args, 2);
		$obj = self::meta();
		$statement = self::parseConditionStatement($args, $obj);
		$table = $obj->getTableName();
		$result = $obj->getDbRecord(self::DB_WRITE)->update($table, $data, $statement, $limit);
		return $result;
	}

	/**
	 * delete from table
	 * @param int $limit
	 * @param $statement
	 * @return bool
	 */
	public static function deleteWhere($limit=1, $statement){
        $args = func_get_args();
        $args = array_slice($args, 1);

		$obj = self::meta();
		$statement = self::parseConditionStatement($args, $obj);
		$table = $obj->getTableName();
		$result = $obj->getDbRecord(self::DB_WRITE)->delete($table, $statement, $limit);
		return $result;
	}

	/**
	 * get all records
	 * @param bool $as_array return as array
	 * @return array
	 */
	final public function all($as_array=false){
		$obj= self::meta();
		$pk_key = $obj->getPrimaryKey();

		$list = $this->getDbRecord(self::DB_READ)->getAll($this->query);
		if($as_array){
			return $list;
		}

		$result = array();
		if($list){
			foreach($list as $item){
				$tmp = clone $this;
				$tmp->setValues($item);
				$tmp->resetValueChangeState();
				$result[$item[$pk_key]] = $tmp;
			}
		}
		return $result;
	}

	/**
	 * get one record
	 * @param bool $as_array
	 * @return DB_Model | null
	 */
	final public function one($as_array=false){
		$data = $this->getDbRecord(self::DB_READ)->getOne($this->query);
		if($as_array){
			return $data;
		}
		if(!empty($data)){
			$this->setValues($data);
			$this->resetValueChangeState();
			return $this;
		}
		return null;
	}

	/**
	 * get one ceil from query result row
	 * @param $key
	 * @return mixed|null
	 */
	final public function ceil($key){
		$this->query->field($key);
		$data = $this->getDbRecord(self::DB_READ)->getOne($this->query);
		return $data ? array_pop($data) : null;
	}

	/**
	 * process query data by size
	 * @todo be test
	 * @param int $size
	 * @param $handler
	 * @return bool
	 */
	private $query_result;
	final public function chunk($size=1, $handler){
		if(!isset($this->query_result)){
			$this->query_result = $this->getDbRecord(self::DB_READ)->query($this->query);
		}

		$i = 0;
		$result = array();
		while($item = $this->getDbRecord(self::DB_READ)->fetchAssoc($this->query_result) && $i++<$size){
			$result[] = $item;
		}

		$ret = null;
		if(!empty($result)){
			$ret = call_user_func($handler, $result);
			$this->chunk($size, $handler);
		}
		if($ret === false){
			return false;
		}
	}

	/**
	 * get record count
	 * @return int
	 */
	final public function count(){
		$count = $this->getDbRecord(self::DB_READ)->getCount($this->query);
		return $count;
	}

	/**
	 * get records by page
	 * @param string $page
	 * @param bool $as_array return as array
	 * @return array || null
	 */
	final public function paginate($page=null, $as_array=false){
		$list = $this->getDbRecord(self::DB_READ)->getPage($this->query, $page);
		if($as_array){
			return $list;
		}
		$result = array();
		if($list){
			foreach($list as $item){
				$tmp = clone $this;
				$tmp->setValues($item);
				$tmp->resetValueChangeState();
				$result[] = $tmp;
			}
		}
		return $result;
	}

	/**
	 * update current object
	 * @throws Exception
	 * @return number
	 */
	final public function update(){
		if($this->onBeforeUpdate() === false){
			return false;
		}

		$data = $this->getValues();
		$pk_val = $data[$this->getPrimaryKey()];
		if(!$pk_val){
			throw new Exception("primary value no found");
		}
		unset($data[$this->getPrimaryKey()]);

		$update_data = array();
		$filters = array();
		$item_change_keys = $this->getValueChangeKeys();
		$all_filter_rules = $this->getFilterRules();
		foreach($data as $key=>$pro){
			if(isset($item_change_keys[$key]) && (empty($all_filter_rules) || $all_filter_rules[$key])){
				$update_data[$key] = $pro;
				$filters[$key] = $all_filter_rules[$key];
			}
		}

		if(!empty($update_data)){
			$result = Filter::init()->filteArray($update_data, $filters);
			if(!empty($result)){
				throw new Exception(array_pop($result), $result);
			}

			//unique
			$properties_defines = $this->getPropertiesDefine();
			if(!empty($properties_defines)){
				foreach($properties_defines as $field_key=>$rule){
					if(isset($rule['unique']) && $data[$field_key]){
						$c = self::find($this->getPrimaryKey()." != '".addslashes($pk_val).
							"' AND $field_key = '".addslashes($data[$field_key])."'")->count();
						if($c){
							throw new Exception($rule['unique']);
						}
					}
				}
			}
			return $this->getDbRecord(self::DB_WRITE)->update($this->getTableName(), $update_data, $this->getPrimaryKey().'='.$pk_val);
		}
		else {
			throw new Exception("no properties update");
		}
	}

	/**
	 * insert new data
	 * @throws Exception
	 * @return string | bool 返回插入的id，或者失败(false)
	 */
	final public function insert(){
		if($this->onBeforeInsert() === false){
			return false;
		}

		$data = $this->getValues();
		$filter_rules = $this->getFilterRules();

		//插入需要过所有的过滤器
		foreach($filter_rules as $key=>$filter){
			if(!isset($data[$key])){
				$data[$key] = null;
			}
		}

		//remove no scalar
		foreach($data as $key=>$item){
			if(!is_scalar($item)){
				unset($data[$key]);
			}
		}

		$result = Filter::init()->filteArray($data, $filter_rules);
		if(!empty($result)){
			throw new Exception(array_pop($result));
		}

		//unique
		$properties_defines = $this->getPropertiesDefine();
		if(!empty($properties_defines)){
			foreach($properties_defines as $field_key=>$rule){
				if(isset($rule['unique']) && $data[$field_key]){
					$c = self::find("$field_key = '".addslashes($data[$field_key])."'")->count();
					if($c){
						throw new Exception($rule['unique']);
					}
				}
			}
		}
		$result = $this->getDbRecord(self::DB_WRITE)->insert($this->getTableName(), $data);
		if($result){
			$pk_val = $this->getDbRecord(self::DB_WRITE)->getLastInsertId();
			$this->setValue($this->getPrimaryKey(), $pk_val);
			return $pk_val;
		}
		return false;
	}

	/**
	 * batch insert data
	 * @param $data_list
	 * @param bool $break_on_fail
	 * @return array | bool
	 * @throws Exception
	 */
	final public static function batchInsert($data_list, $break_on_fail=true){
		if(count($data_list, COUNT_RECURSIVE) == count($data_list)){
			throw new Exception('2 dimension array needed');
		}

		$obj = self::meta();
		$return_list = array();
		foreach($data_list as $data){
			$tmp = clone($obj);
			$tmp->setValues($data);
			if($tmp->onBeforeInsert() === false){
				if($break_on_fail){
					return false;
				} else {
					continue;
				}
			}
			$filter_rules = $tmp->getFilterRules();

			//插入需要过所有的过滤器
			foreach($filter_rules as $key=>$filter){
				if(!isset($data[$key])){
					$data[$key] = null;
				}
			}

			$result = Filter::init()->filteArray($data, $filter_rules);
			if(!empty($result)){
				if($break_on_fail){
					throw new Exception(array_pop($result));
				} else {
					continue;
				}
			}

			$result = $tmp->getDbRecord(self::DB_WRITE)->insert($tmp->getTableName(), $data);
			if($result){
				$pk_val = $tmp->getDbRecord(self::DB_WRITE)->getLastInsertId();
				$tmp->setValue($tmp->getPrimaryKey(), $pk_val);
				$return_list[] = $pk_val;
			} else {
				if($break_on_fail){
					return false;
				}
			}
		}
		return $return_list;
	}

	/**
	 * delete current object
	 * @return bool
	 */
	public function delete($cond=''){
		$pk_val = $this[$this->getPrimaryKey()];
		if(!$pk_val && !$cond){
			return false;
		}
		$statement = $cond ?: $this->getPrimaryKey().'='.$pk_val;
		$result = $this->getDbRecord(self::DB_WRITE)->delete($this->getTableName(), $statement, 1);
		return !!$result;
	}

	/**
	 * parser SQL condition statement
	 * @param array $args
	 * @param DB_Model $obj
	 * @return string
	 */
	private static function parseConditionStatement($args=array(), DB_Model $obj){
		$statement = $args[0];
		$args = array_slice($args, 1);
		if(!empty($args)){
			$arr = explode('?', $statement);
			$rst = '';
			foreach($args as $key=>$val){
				$rst .= $arr[$key].$obj->getDbRecord(self::DB_READ)->quote($val);
			}
			$rst .= array_pop($arr);
			$statement = $rst;
		}
		return $statement;
	}

	/**
	 * save current change
	 * @return bool
	 */
	final public function save(){
		if($this->onBeforeSave() === false){
			return false;
		}

		$data = $this->getValues();
		$has_pk = !empty($data[$this->getPrimaryKey()]);

		if($has_pk){
			return $this->update();
		} else if(!empty($data)){
			return $this->insert();
		}
		return false;
	}

	/**
	 * call other query method
	 * @param $method_name
	 * @param $params
	 * @return $this
	 * @throws Exception
	 */
	final public function __call($method_name, $params){
		if(method_exists($this->query, $method_name)){
			call_user_func_array(array($this->query, $method_name), $params);
			return $this;
		}

		throw new Exception("METHOD NO EXIST:".$method_name);
	}

	/**
	 * inherit DAO setter
	 * @param $key
	 * @param $val
	 */
	public function __set($key, $val){
		parent::__set($key, $val);
	}

	/**
	 * 配置getter
	 * 支持：'name' => array('has_one'=>callable, 'target_key'=>'category_id','source_key'=>默认当前对象PK)
	 * 支持：'children' => array('has_many'=>callable, 'target_key'=>'category_id', 'source_key' => 默认当前对象PK)
	 * 支持：'name' => array('getter' => function($k){})
	 * 支持：'name' => array('setter' => function($k, $v){})
	 * @param $key
	 * @return mixed
	 */
	public function __get($key){
		$defines = $this->getPropertiesDefine($key);
		if($defines && ($defines['has_one'] || $defines['has_many'])){
			$source_key = $defines['source_key'];
			$target_key = $defines['target_key'];

			if($defines['has_one']){
				if(!$target_key && !$source_key){
					throw new Exception('has one config must define target key or source key');
				}
				$match_val = $this->getValue($source_key ?: $this->getPrimaryKey());
				if(!$target_key){
					return $defines['has_one']::findOneByPk($match_val);
				} else {
					return $defines['has_one']::find("$target_key = ?", $match_val)->one();
				}
			}
			if($defines['has_many']){
				if(!$target_key){
					throw new Exception('has many config must define target key');
				}
				$match_val = $this->getValue($source_key ?: $this->getPrimaryKey());
				return $defines['has_many']::find("$target_key = ?", $match_val)->all();
			}
		}
		return parent::__get($key);
	}

	/**
	 * transform current query object to SQL command string
	 * @return string|void
	 */
	public function __toString(){
		return $this->query.'';
	}


}

/**
 * DB Helper，主要提供给DB_Model内部使用。
 * 外部还是尽量调用 DB_Model::setQuery来使用
 */
class __ModelHelper__ extends DB_Model {
	public function getTableName() {}
	public function getPrimaryKey() {}
}