(function(Y){
	var url = function(uri, params){
		return '/litephp/demo/index.php/'+uri+Y.net.buildParam(params);
	};
	
	Y.dom.delegate('*[rel=add-note]', 'click', function(){
		Y.showPopup({
			'title': 'ADD NOTE',
			'content': {src:url('note/add')},
			width: 600,
			height:400
		});
		return false;
	});
	Y.dom.delegate('a[rel=pop]', 'click', function(){
		Y.event.preventDefault();
		var _title = this.getAttr('title');
		var _href = this.getAttr('href');
		Y.use('widget.Popup', function(Y, Pop){
			var pop = new Pop({
				title: _title,
				content: {src: _href},
				width:400
			});
			pop.show();
		});
	});
})(YSL);