(function(Y){	//默认遮罩层样式配置	var MASKER_STYLE_ID = 'YSL_MASKER_STYLE';	var MASKER_CLASS = 'YSL_MAKSER';	var MASKER_STYLESHEET = '.'+MASKER_CLASS+'{position:absolute;top:0;left:0;width:100%;background-color:#ddd;z-index:999;opacity:0.5; filter: alpha(opacity=50);}';	//遮罩层DOM	var MASKER_DOM;	/**	 * 遮罩层	 * 该对象仅提供单例模式	 */	var masklayer = {		/**		 * show masklayer		 * @param {Object} styleConfig 样式配置，支持覆盖所有key		 */		show: function(styleConfig){			if(!MASKER_DOM){				Y.dom.insertStyleSheet(MASKER_STYLESHEET, MASKER_STYLE_ID);				MASKER_DOM = Y.dom.create('div');				MASKER_DOM.addClass(MASKER_CLASS);				if(styleConfig){					MASKER_DOM.setStyle(styleConfig);				}			}			var winRegion = Y.dom.getWindowRegion();			MASKER_DOM.setStyle('height',winRegion.documentHeight);			MASKER_DOM.show();		},		/**		 * hide masklayer		 */		hide: function(){			if(MASKER_DOM){				MASKER_DOM.hide();			}		}	};	Y.widget.masklayer = masklayer;})(YSL);