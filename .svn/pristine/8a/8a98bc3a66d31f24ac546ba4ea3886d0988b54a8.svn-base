.resume-main, .resume-cover {box-shadow:0 0 8px #bbb;}
.resume-main-wrap {padding:60px; border-bottom:1px solid white;}

.resume-avatar-img {overflow:hidden;}

.resume-cover {margin-bottom:20px; height:949px;}
.resume-cover span {width:800px; position:absolute; display:block; text-align:center;}
.resume-cover .resume-cover-title {font-size:64px;margin-top:130px;}
.resume-cover .resume-cover-name {font-size:28px; margin-top:230px;}
.resume-cover .resume-cover-email {font-size:20px; margin-top:280px;}
.resume-cover .resume-cover-mobile {font-size:20px; margin-top:330px;}