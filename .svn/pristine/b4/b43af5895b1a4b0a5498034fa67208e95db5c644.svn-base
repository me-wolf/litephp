<?php
/**
 * reference parameter structure
 * supply for PHP5.3+ reference call
 * @author sasumi
 */
namespace LITE;
class RefParam {
	private $data = array();

	public function __construct(array $data=array()){
		$this->data = $data;
	}

	public function __set($key, $val){
		$this->data[$key] = $val;
	}

	public function __get($key){
		return $this->data[$key];
	}
}
