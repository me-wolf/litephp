#logo {display:none;}
html {background-color:white;}
html, body, .page {height:100%;}
body {font-family:Microsoft Yahei, Verdana,sans-serif; font-size:13px;}
a {color:#444; text-decoration:none;}

.txt {border:1px solid #ccc; border-left:1px solid #aaa; border-top:1px solid #aaa; padding:2px 3px; border-radius:3px; font-family:Microsoft Yahei, Verdana,sans-serif; font-size:12px;}

.add-note-lnk {background:url("icon.png") no-repeat -100px -20px; padding-left:25px; font-size:14px; font-weight:bold; text-shadow:1px 1px black;}

.header {height:30px; color:white; overflow:hidden; position:absolute; width:100%; box-shadow:2px 1px 3px #A3A3A3; background:url("hd_bg.png") repeat-x;}
.header a {color:white;}

.logo {float:right; margin:2px 10px 0 0; line-height:30px; text-transform:uppercase;}
.logo a {color:#fff; background:url("logo.png") no-repeat 0 2px; padding-left:24px; display:block; font-size:18px}
.container {height:100%; overflow:hidden;}

.shortcut {padding:0 0 0 10px;}
.shortcut li {float:left; line-height:30px;}

.sidebar, .data-collection, .content {height:100%; padding-top:30px}
.container {height:100%; overflow:hidden}
.sidebar {width:200px; float:left; background:url("sbg.png");}
.data-collection {float:left; width:300px; border-right:1px solid #ccc; box-shadow:-1px 0 4px #BBB; background-color:#F7FAFC;}
.data-collection .cap,
.content .cap {border-bottom:1px solid #E6E6E6; height:40px; background-color:white}
.content .cap {border-bottom:1px solid #eee;}
.data-collection .cap h2,
.content .cap h2 {font-size:14px; line-height:40px; color:#787A86; float:left; padding-left:1em;}
.content .cap h2 {font-size:17px;}
.data-collection .cap .ord-lst {margin:10px 10px 0 188px;}

.content .cap .op-list {float:right; margin:10px 10px 0 10px;}
.content .main {padding:10px; width:500px; font-size:14px; line-height:1.75em; color:#444}

.data-collection .data-list li {padding:10px; border-bottom:1px solid #eee; cursor:pointer}
.data-collection .data-list li:hover {background-color:white;}
.data-collection .data-list .ti {font-size:14px; font-weight:bold; display:block;}
.data-collection .data-list .con {display:block; color:gray; padding:5px 0;}
.data-collection .data-list .date {display:block; text-align:right; color:#aaa}

.ord-lst {color:gray; position:absolute;}
.ord-lst dt {display:block; text-indent:-9999em; margin-left:71px; width:35px; height:20px; background:url("icon2.png") no-repeat -78px -260px; cursor:pointer;}
.ord-lst dd {display:block; background-color:white; border:1px solid #ddd; margin-top:-1px; width:80px; padding:0.5em 1em; clear:both; cursor:pointer;}
.ord-lst dt:hover {background-position:-78px -280px; background-color:#ddd;}
.ord-lst dd {display:none;}
.ord-lst dd:hover {background-color:#eee;}
.ord-lst:hover dd {display:block}
.ord-lst:hover dt {background-color:#ddd;}

.content {float:left}

.search {padding:10px 3px 3px; margin-bottom:10px;}
.search .txt {width:160px; background:url("icon.png") -98px -81px white; border-radius:12px; padding:2px 5px 2px 20px;}
.search .txt:focus {}
.search .search-btn {display:none;}

.sidebar dt {height:22px; background:url("nav_rpt.png") repeat-x; border-top:1px solid #E0E0E0; border-bottom:#bec0be; padding:2px 5px; font-weight:bold; color:#aaa;}
.sidebar dd {height:22px; border-top:1px solid white; border-bottom:1px solid #ddd; padding:2px 5px; text-shadow:1px 1px white;}
.sidebar a:hover {text-decoration:underline;}
.sidebar dd:hover {background-color:#fefefe}

.catalog .add-btn {display:none;}
.catalog dt:hover .add-btn,
.catalog dd:hover .add-btn {display:inline-block; float:right; background-color:#345; color:white; padding:2px 5px; margin-top:3px; font-weight:normal; font-size:12px; line-height:12px; border-radius:10px; text-shadow:none;}

.sidebar dd:last-child {border-bottom:none}
.sidebar dd .cnt {display:inline-block; float:right; background-color:#ccc; color:gray; padding:2px 5px; margin-top:3px; font-weight:normal; font-size:12px; line-height:12px; border-radius:10px;}
.catalog dd:hover .cnt {display:none;}

.sidebar .all-catalog dd {border:none; font-weight:bold;}
.sidebar .all-catalog a {color:#003a5f;}
.sidebar .all-catalog i {display:inline-block; width:16px; height:16px; float:left; background:url("icon.png") no-repeat -62px -42px; margin:1px 2px 0 0;}
.sidebar .catalog .current {background-color:white;}
