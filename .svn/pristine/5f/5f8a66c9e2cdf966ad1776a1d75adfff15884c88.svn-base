CREATE TABLE IF NOT EXISTS `self_admin_role` (
  `id` int(11) unsigned NOT NULL AUTO_INCREMENT,
  `name` varchar(20) NOT NULL COMMENT '角色名称',
  `allow` text COMMENT '开放权限',
  `deny` text COMMENT '禁止权限',
  `default_type` tinyint(1) DEFAULT NULL COMMENT '缺省权限类型',
  `is_del` tinyint(1) NOT NULL DEFAULT '0' COMMENT '删除状态 1删除,0正常',
  PRIMARY KEY (`id`)
) ENGINE=MyISAM  DEFAULT CHARSET=utf8 COMMENT='后台角色分组表' AUTO_INCREMENT=14 ;

