.page-resume-guide {/*font-size:14px;*/}
.page-resume-guide h3 {font-size:16px; font-weight:normal; text-shadow:1px 1px 1px #eee}
.page-resume-guide .srch-frm {margin:10px 0 20px 0;}
.page-resume-guide .srch-frm input.txt {width:500px;}
.page-resume-guide .quick-index-frm legend {font-weight:normal;}
.page-resume-guide .quick-index-frm fieldset {padding:0;}
.page-resume-guide .quick-index-frm dt {width:84px; color:gray;}
.page-resume-guide .quick-index-frm dd {padding-top:5px; line-height:25px; overflow:hidden;}
.page-resume-guide .quick-index-frm dd a {display:block; float:left; border:1px solid #fff; background:url("../img/tick_off.png") no-repeat 2px 50%; border-radius:3px; padding:0 2px 0 16px; margin:0 2px 2px 0; color:#ccc;}
.page-resume-guide .quick-index-frm dd a.tick-on {background-image:url("../img/tick_on.png"); color:black;}
.page-resume-guide .quick-index-frm dd a:hover {text-decoration:none; border:1px solid #ccc; background-color:white; box-shadow:1px 1px 1px #ddd}
.page-resume-guide .result-list {padding:10px 0 0 20px;}
.page-resume-guide .result-list li {margin-bottom:0.5em; padding-bottom:0.5em; border-bottom:1px dotted #ddd;}
.page-resume-guide .result-list h4 {margin-bottom:5px; color:#666;}

.page-resume-guide .hot-resume-list {margin:10px 0;}
.page-resume-guide .hot-resume-list li {margin-bottom:0.5em; padding-bottom:0.5em; border-bottom:1px dotted #eee;}
.page-resume-guide .hot-resume-list h3 {margin-bottom:10px;}
.page-resume-guide .hot-resume-list h4 {font-weight:normal;}

.page-resume-guide .tb-link {margin:10px;}

.pager {text-align:right}